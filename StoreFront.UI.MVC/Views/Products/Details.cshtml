@model StoreFront.DATA.EF.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>



        <dd>
            <img style="height: 500px; width: 500px;" src="~/Content/imgs/@Model.ProductImage" alt="@Model.ProductName" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StockStatu.StockStatusID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StockStatu.InStock)
        </dd>
    </dl>
    @using (Html.BeginForm("AddToCart", "Products",
                        new { productID = Model.ProductID }, FormMethod.Post, new { @class = "text-center" }))
    {
        @Html.HiddenFor(x => x.ProductID)
        @Html.TextBox("Qty", 1, new { @class = "form-control", style = "max-width: 75px; display: inline;" })
        <div class="text-center"><input class="btn btn-outline-dark mt-auto" type="submit" value="Add to Cart" name="qty" /></div>
    }
</div>
<p>
    @Html.ActionLink("Delete", "Delete", new { id = Model.ProductID }, new { @class = "text-danger" }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
