@foreach (var item in Model)
{
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/Content/imgs/t_@item.ProductImage" alt="Image of @item.ProductName" title="@item.ProductName" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                <!-- Product price-->
                                @Html.DisplayFor(modelItem => item.Price)
                                @Html.DisplayFor(modelItem => item.StockStatu.InStock)
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" @Html.ActionLink("Details", "Details", new { id = item.ProductID })>Add to cart</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
